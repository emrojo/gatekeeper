<%= form_tag({controller: "lots", action: "create"}, {class: 'form-horizontal'}) do %>
   <input type="hidden" id="lot_type" name="lot_type" value="<%= lot_type.uuid %>">

  <%= render :partial => 'form_elements/user_swipecard' %>

  <div class="form-group">
    <label for="lot_number" class="col-sm-5 control-label">Lot number</label>
    <div class="input-group col-sm-6">
      <%= input_glyph('barcode') %>
      <input type="text" class="form-control" id="lot_number" name="lot_number" placeholder="Scan barcode or type number" required="required">
    </div>
  </div>

  <div class="form-group">
    <label for="template" class="col-sm-5 control-label"><%= lot_type.template_type %></label>
    <div class="input-group col-sm-6">
      <%= input_glyph('wrench') %>
      <select class="form-control" id="template" name="template">
        <% lot_type.each_template_option do |name,uuid| -%>
          <option value="<%= uuid %>"><%= name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label for="received_at" class="col-sm-5 control-label">Received at</label>
    <div class="input-group col-sm-6">
      <%= input_glyph('calendar') %>
      <input type="text" data-provide="datepicker" data-date-format="dd/mm/yyyy" data-date-end-date="+0d" data-date-week-start=1 data-date-today-btn="linked" data-date-today-highlight="true" class="form-control" id="received_at" name="received_at" placeholder="Select Date" required="required">
    </div>
  </div>

  <div class="form-group">
    <span class="col-sm-5"> </span>
    <div class="col-sm-6">
      <button type="submit" class="form-control btn-success" id="register_lot" name="register_lot" value="Register Lot"><span class='glyphicon glyphicon-plus'></span> Register Lot</button>
    </div>
  </div>

<% end %>
