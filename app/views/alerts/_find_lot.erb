<!-- Modal -->
<div class="modal fade" id="findIDT" tabindex="-1" role="dialog" aria-labelledby="findIDTLabel" aria-hidden="true" data-focus='idt_barcode_to_find'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="findIDTLabel">View lot</h4>
      </div>
      <%= form_tag search_lots_path, :method => 'get' do %>
        <div class="modal-body">
          <div class="form-group">
            <label for="lot_number" class="control-label">Lot Number</label>
            <div class="input-group">
              <%= icon_tag('glyphicon-barcode') %>
              <input type="text" class="form-control" id="lot_number" placeholder="Scan barcode or input IDT" required="required" name="lot_number">
              <span class="input-group-btn">
                <input class="btn btn-default" type="submit" value='Find'>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
