<!-- Modal -->
<div class="modal fade" id="destroyQcable" tabindex="-1" role="dialog" aria-labelledby="destroyQcableLabel" aria-hidden="true" data-focus='qcable_barcode_to_destroy'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="destroyQcableLabel">Destroy Plate</h4>
      </div>
      <%= form_tag asset_path, :method => 'delete' do %>
        <div class="modal-body">

          <%= render :partial => 'form_elements/user_swipecard' %>

          <div class="form-group">
            <label for="idt_barcode" class="col-sm-5 control-label">Plate barcode</label>
            <div class="input-group col-sm-6">
              <%= icon_tag('glyphicon-barcode') %>
              <input type="text" class="form-control" id="asset_barcode" name="asset_barcode" placeholder="Scan barcode" required="required">
            </div>
          </div>


          <div class="form-group">
            <button type="submit" class="form-control btn-danger" id="submit" value="Destroy Plate"><span class='glyphicon glyphicon-trash'></span> Destroy Plate</button>
            </div>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
